<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowMyAnotherName"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_another_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/show_another_name_edittext"
        android:hint="Write Another Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/show_name_2"
        android:text="Show Me Another Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>